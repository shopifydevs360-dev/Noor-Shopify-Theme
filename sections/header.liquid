{{ 'header.css' | asset_url | stylesheet_tag: preload: true }}

<header class="main-header">
  <div class="desktop-header">
    <!-- Menu -->
    <nav class="header__menu">
      {% for link in section.settings.menu.links %}
        {{ link.title | link_to: link.url }}
      {% endfor %}
    </nav>

    <!-- Icons -->
    <div class="header__icons">
      {% if shop.customer_accounts_enabled %}
        <a href="{{ routes.account_url }}">
          {{ 'icon-account.svg' | inline_asset_content }}
        </a>
      {% endif %}

      <a href="{{ routes.cart_url }}">
        {% if cart.item_count > 0 %}
          <sup>{{ cart.item_count }}</sup>
        {% endif %}
        {{ 'icon-cart.svg' | inline_asset_content }}
      </a>
    </div>
  </div>
  <!-- Logo -->
  {% render 'logo' %}
</header>

{% stylesheet %}
.main-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 var(--page-margin);
}

.main-header a {
  position: relative;
  text-decoration: none;
  color: var(--color-foreground);
}

.main-header a sup {
  position: absolute;
  left: 100%;
  overflow: hidden;
  max-width: var(--page-margin);
}

.main-header svg {
  width: 2rem;
}

.main-header .header__menu,
.main-header .header__icons {
  display: flex;
  gap: 1rem;
  align-items: center;
}
{% endstylesheet %}
 <script src="{{ 'header.js' | asset_url }}" defer="defer"></script>
{% schema %}
{
  "name": "t:general.header",
  "settings": [
    {
      "type": "select",
      "id": "header_design",
      "label": "Header design",
      "options": [
        {
          "value": "logo-center-menu-left",
          "label": "Logo center"
        },
        {
          "value": "logo-left-menu-center",
          "label": "Logo left"
        }
      ],
      "default": "logo-center-menu-left"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "t:labels.menu"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme_menu",
      "label": "Color scheme menu bar",
      "info": "For header design where Menu and Logo are in 2 lines",
      "default": "dark"
    },
  ]
}
{% endschema %}
