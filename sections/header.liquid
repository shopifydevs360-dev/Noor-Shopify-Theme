{{ 'header.css' | asset_url | stylesheet_tag: preload: true }}

<header class="main-header" data-color-scheme="{{ section.settings.color_scheme }}">
  <div class="header-container">
    <!-- Off-canvas trigger -->
    <button class="header__menu-trigger" aria-label="Menu" data-drawer-toggle="menu-drawer">
      <span class="menu-icon">
        <span></span>
        <span></span>
        <span></span>
      </span>
    </button>

    <!-- Logo -->
    <div class="header__logo">
      {% if section.settings.logo != blank %}
        <a href="{{ routes.root_url }}" class="logo-link">
          {{ section.settings.logo | image_url: width: section.settings.logo_width | image_tag: 
            widths: '50,100,150,200,250,300', 
            class: 'logo-image',
            alt: section.settings.logo.alt | default: shop.name 
          }}
        </a>
      {% else %}
        <a href="{{ routes.root_url }}" class="logo-link">
          <span class="logo-text">{{ shop.name }}</span>
        </a>
      {% endif %}
    </div>

    <!-- Icons -->
    <div class="header__icons">
      {% if section.settings.enable_search %}
        <button class="header__icon header__search" aria-label="Search" data-drawer-toggle="search-drawer">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M21 21L15.5 15.5M17 10C17 13.866 13.866 17 10 17C6.13401 17 3 13.866 3 10C3 6.13401 6.13401 3 10 3C13.866 3 17 6.13401 17 10Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
      {% endif %}

      {% if section.settings.enable_account and shop.customer_accounts_enabled %}
        <a href="{{ routes.account_url }}" class="header__icon header__account" aria-label="Account">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M20 21V19C20 17.9391 19.5786 16.9217 18.8284 16.1716C18.0783 15.4214 17.0609 15 16 15H8C6.93913 15 5.92172 15.4214 5.17157 16.1716C4.42143 16.9217 4 17.9391 4 19V21" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M12 11C14.2091 11 16 9.20914 16 7C16 4.79086 14.2091 3 12 3C9.79086 3 8 4.79086 8 7C8 9.20914 9.79086 11 12 11Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>
      {% endif %}

      {% if section.settings.enable_wishlist %}
        <a href="/pages/wishlist" class="header__icon header__wishlist" aria-label="Wishlist">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M20.84 4.61C20.3292 4.099 19.7228 3.69365 19.0554 3.41708C18.3879 3.14052 17.6725 2.99817 16.95 2.99817C16.2275 2.99817 15.5121 3.14052 14.8446 3.41708C14.1772 3.69365 13.5708 4.099 13.06 4.61L12 5.67L10.94 4.61C9.9083 3.57831 8.50903 2.99871 7.05 2.99871C5.59096 2.99871 4.19169 3.57831 3.16 4.61C2.1283 5.64169 1.54871 7.04097 1.54871 8.5C1.54871 9.95903 2.1283 11.3583 3.16 12.39L4.22 13.45L12 21.23L19.78 13.45L20.84 12.39C21.351 11.8792 21.7564 11.2728 22.0329 10.6054C22.3095 9.93789 22.4518 9.22249 22.4518 8.5C22.4518 7.77751 22.3095 7.0621 22.0329 6.39464C21.7564 5.72718 21.351 5.12075 20.84 4.61Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>
      {% endif %}

      {% if section.settings.enable_cart %}
        <a href="{{ routes.cart_url }}" class="header__icon header__cart" aria-label="Cart">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M9 22C9.55228 22 10 21.5523 10 21C10 20.4477 9.55228 20 9 20C8.44772 20 8 20.4477 8 21C8 21.5523 8.44772 22 9 22Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M20 22C20.5523 22 21 21.5523 21 21C21 20.4477 20.5523 20 20 20C19.4477 20 19 20.4477 19 21C19 21.5523 19.4477 22 20 22Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M1 1H5L7.68 14.39C7.77144 14.8504 8.02191 15.264 8.38755 15.5583C8.75318 15.8526 9.2107 16.009 9.68 16H19.4C19.8693 16.009 20.3268 15.8526 20.6925 15.5583C21.0581 15.264 21.3086 14.8504 21.4 14.39L23 6H6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          {% if cart.item_count > 0 %}
            <span class="cart-count">{{ cart.item_count }}</span>
          {% endif %}
        </a>
      {% endif %}
    </div>
  </div>
</header>

<style>
  .main-header {
    position: relative;
    z-index: 100;
    background-color: var(--color-background);
    color: var(--color-foreground);
    padding: 0;
    border-bottom: 1px solid var(--color-border);
  }

  .header-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem var(--page-margin);
  }

  /* Menu Trigger */
  .header__menu-trigger {
    background: none;
    border: none;
    padding: 0.5rem;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .menu-icon {
    width: 24px;
    height: 20px;
    position: relative;
    display: inline-block;
  }

  .menu-icon span {
    display: block;
    position: absolute;
    height: 2px;
    width: 100%;
    background: var(--color-foreground);
    border-radius: 2px;
    opacity: 1;
    left: 0;
    transform: rotate(0deg);
    transition: .25s ease-in-out;
  }

  .menu-icon span:nth-child(1) {
    top: 0px;
  }

  .menu-icon span:nth-child(2) {
    top: 8px;
  }

  .menu-icon span:nth-child(3) {
    top: 16px;
  }

  .header__menu-trigger:hover .menu-icon span:nth-child(1) {
    top: 8px;
    transform: rotate(135deg);
  }

  .header__menu-trigger:hover .menu-icon span:nth-child(2) {
    opacity: 0;
    left: -60px;
  }

  .header__menu-trigger:hover .menu-icon span:nth-child(3) {
    top: 8px;
    transform: rotate(-135deg);
  }

  /* Logo */
  .header__logo {
    flex-grow: 1;
    text-align: center;
  }

  .logo-link {
    display: inline-block;
    text-decoration: none;
    color: var(--color-foreground);
  }

  .logo-image {
    max-height: {{ section.settings.logo_height }}px;
    width: auto;
  }

  .logo-text {
    font-size: 1.5rem;
    font-weight: 600;
    font-family: var(--font-heading-family);
  }

  /* Icons */
  .header__icons {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .header__icon {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: transparent;
    color: var(--color-foreground);
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .header__icon:hover {
    background-color: var(--color-button-background);
    color: var(--color-button-text);
  }

  .header__icon svg {
    width: 20px;
    height: 20px;
  }

  .cart-count {
    position: absolute;
    top: 0;
    right: 0;
    background-color: var(--color-badge-background);
    color: var(--color-badge-foreground);
    border-radius: 50%;
    min-width: 18px;
    height: 18px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.75rem;
    font-weight: 600;
    line-height: 1;
    padding: 0 4px;
  }

  /* Mobile adjustments */
  @media (max-width: 767px) {
    .header__logo {
      flex-grow: 0;
      position: absolute;
      left: 50%;
      transform: translateX(-50%);
    }
  }
</style>

<script src="{{ 'header.js' | asset_url }}" defer="defer"></script>

{% schema %}
{
  "name": "t:general.header",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "inverse"
    },
    {
      "type": "header",
      "content": "Logo"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo image"
    },
    {
      "type": "range",
      "id": "logo_width",
      "min": 50,
      "max": 300,
      "step": 10,
      "unit": "px",
      "label": "Logo width",
      "default": 120
    },
    {
      "type": "range",
      "id": "logo_height",
      "min": 20,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Logo height",
      "default": 40
    },
    {
      "type": "header",
      "content": "Header elements"
    },
    {
      "type": "checkbox",
      "id": "enable_search",
      "label": "Enable search",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_account",
      "label": "Enable account",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_wishlist",
      "label": "Enable wishlist",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_cart",
      "label": "Enable cart",
      "default": true
    }
  ],
  "presets": [
    { "name": "Header" }
  ]
}
{% endschema %}