{{ 'footer.css' | asset_url | stylesheet_tag }}
{% render 'section-base-style' %}
{%- liquid
  assign outer-classes = 'footer container-fluid'
  assign outer-classes = outer-classes | append: ' section-' | append: section.id | append: '-padding'
  assign outer-classes = outer-classes | append: ' ' | append: section.settings.color_control
-%}
<footer class="{{ outer-classes }}">
  <div class="footer__inner">

    {% for block in section.blocks %}
      {% case block.type %}

        <!-- =====================
             NEWSLETTER BLOCK
        ====================== -->
        {% when 'newsletter' %}
          <div class="footer__newsletter" {{ block.shopify_attributes }}>

            <!-- Logo -->
            <div class="footer__logo">
              {% if block.settings.logo != blank %}
                {{ block.settings.logo | image_url: width: 300 | image_tag }}
              {% else %}
                {% render 'logo' %}
              {% endif %}
            </div>

            <!-- Newsletter Form -->
            <form method="post"
                  action="/contact#footer-newsletter"
                  accept-charset="UTF-8"
                  class="footer__form">

              <input type="hidden" name="form_type" value="customer">
              <input type="hidden" name="contact[tags]" value="newsletter">

              <input
                type="email"
                name="contact[email]"
                placeholder="Email address"
                required
              >

              {% if block.settings.text != blank %}
                <div class="footer__text">
                  {{ block.settings.text }}
                </div>
              {% endif %}

              <label class="footer__checkbox">
                <input type="checkbox" checked>
                <span>{{ block.settings.checkbox_text }}</span>
              </label>

              <button type="submit" class="footer__submit">
                {{ block.settings.button_text }}
              </button>

            </form>
          </div>

        <!-- =====================
             MENU BLOCK
        ====================== -->
        {% when 'menu' %}
          <div class="footer__menu" {{ block.shopify_attributes }}>

            <button class="footer__menu-title js-footer-toggle">
              {{ block.settings.title }}
            </button>

            <nav class="footer__menu-links">
              {% for link in block.settings.menu.links %}
                <a href="{{ link.url }}">{{ link.title }}</a>
              {% endfor %}
            </nav>

          </div>

      {% endcase %}
    {% endfor %}

  </div>
</footer>
<script src="{{ 'footer.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Footer",
  "max_blocks": 6,
  "blocks": [
    {
      "type": "newsletter",
      "name": "Newsletter",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Logo"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "text",
          "id": "checkbox_text",
          "label": "Checkbox text",
          "default": "Yes, send me your newsletter"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button text",
          "default": "Subscribe"
        }
      ]
    },
    {
      "type": "menu",
      "name": "Menu",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Menu title",
          "default": "Footer menu"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Footer",
      "blocks": [
        { "type": "newsletter" },
        { "type": "menu" }
      ]
    }
  ]
}
{% endschema %}
