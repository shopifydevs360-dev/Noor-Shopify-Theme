{{ 'article-wrapper.css' | asset_url | stylesheet_tag }}

{% assign blog_object = blogs[section.settings.blog] %}

{% if blog_object != blank and blog_object.articles_count > 0 %}
<section
  class="featured-posts js-pinned-sections"
  data-section-id="{{ section.id }}"
>
  <div class="sh-container">
    <h2 class="featured-posts__title hd-3" data-reveal="lines-masked">
      {{ section.settings.wrapper_title }}
    </h2>
  </div>

  <div class="featured-posts__inner sh-container-lg">
    <div class="articles-wrapper">

      {% for article in blog_object.articles limit: 2 %}
        <article
          class="article-pin-card js-pin-panel-wrap"
          data-index="{{ forloop.index0 }}"
        >
          <div class="article-pin-card__grid">

            <!-- Image -->
            <div class="article-pin-card__image">
              <a href="{{ article.url }}">
                {% if article.image %}
                  <div class="image-wrapper">
                    <img
                      src="{{ article.image | image_url: width: 900 }}"
                      alt="{{ article.title | escape }}"
                      loading="lazy"
                      class="lazyload"
                    >
                  </div>
                {% endif %}
              </a>
            </div>

            <!-- Content -->
            <div class="article-pin-card__content">
              <a href="{{ article.url }}">
                <span class="article-index">
                  {{ forloop.index | prepend: '0' }}
                </span>
                <h3 class="article-title">
                  {{ article.title }}
                </h3>
                <span class="article-link">Explore</span>
              </a>
            </div>

          </div>
        </article>
      {% endfor %}

      <!-- Counter (desktop) -->
      <div class="featured-post-count">
        {% for article in blog_object.articles limit: 2 %}
          <span
            class="counter-item {% if forloop.first %}is-active{% endif %}"
            data-counter-index="{{ forloop.index0 }}"
          >
            {{ forloop.index | prepend: '0' }}
          </span>
        {% endfor %}
      </div>

    </div>
  </div>

  <div class="sh-container featured-posts__footer">
    <a href="{{ section.settings.blog.url }}" class="featured-posts__all">
      All Features
    </a>
  </div>
</section>
{% endif %}

<script src="{{ 'article-wrapper.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Articles Wrapper",
  "settings": [
    {
      "type": "text",
      "id": "wrapper_title",
      "label": "Section title",
      "default": "Featured Articles"
    },
    {
      "type": "blog",
      "id": "blog",
      "label": "Select blog"
    }
  ],
  "presets": [
    {
      "name": "Articles Wrapper"
    }
  ]
}
{% endschema %}