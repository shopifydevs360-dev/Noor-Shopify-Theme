{{ 'article-wrapper.css' | asset_url | stylesheet_tag: preload: true }}

{% assign blog_object = blogs[section.settings.blog] %}
{% if blog_object.articles.size > 0 %}
  <div id="shopify-section-{{ section.id }}" class="shopify-section">
    <section class="featured-posts" data-section-id="{{ section.id }}">
      <div class="featured-posts__container">
        <h2 class="featured-posts__title" data-reveal="lines-masked">{{ section.settings.wapper_title }}</h2>
      </div>

      <div class="featured-posts__articles-container">
        {% assign counter = 0 %}
        {% for article in blog_object.articles limit: 2 %}
          {% assign counter = forloop.index %}
          <div class="featured-posts__article js-article-card" data-article-index="{{ forloop.index0 }}">
            <div class="featured-posts__image-wrapper">
              <a href="{{ article.url }}" class="featured-posts__image-link" aria-label="{{ article.title }}">
                <div class="featured-posts__image-crop">
                  <picture>
                    <source data-srcset="{{ article.image | image_url: width: 600 }}" media="(min-width: 768px)">
                    <img 
                      class="lazyload featured-posts__image" 
                      data-src="{{ article.image | image_url: width: 600 }}" 
                      data-sizes="auto"
                      alt="{{ article.title }}"
                    >
                  </picture>
                </div>
              </a>
            </div>
            <div class="featured-posts__content-wrapper">
              <a href="{{ article.url }}" class="featured-posts__content-link" aria-label="{{ article.title }}">
                <span class="featured-posts__counter show-tablet-down">{{ counter | prepend: '0' }}</span>
                <h3 class="featured-posts__article-title">{{ article.title }}</h3>
                <span class="featured-posts__explore-link">Explore</span>
              </a>
            </div>
          </div>
        {% endfor %}

        <div class="featured-posts__counter-nav hide-tablet-down">
          {% for article in blog_object.articles limit: 2 %}
            <span class="featured-posts__counter-item {% if forloop.first %}is-active{% endif %}" data-counter-index="{{ forloop.index0 }}">
              {{ forloop.index | prepend: '0' }}
            </span>
          {% endfor %}
        </div>
      </div>

      <div class="featured-posts__container">
        <a href="{{ section.settings.blog.url }}" class="featured-posts__view-all" aria-label="View all articles">
          All Features
        </a>
      </div>
    </section>
  </div>
{% else %}
  <div class="featured-posts__empty">
    <p>No articles found in the selected blog.</p>
  </div>
{% endif %}

<script src="{{ 'article-wrapper.js' | asset_url }}" defer="defer"></script>

{% schema %}
{
  "name": "Articles Wrapper",
  "settings": [
    {
      "type": "text",
      "id": "wapper_title",
      "label": "Title",
      "default": "Featured Articles"
    },
    {
      "type": "blog",
      "id": "blog",
      "label": "Choose a Blog"
    }
  ],
  "presets": [
    {
      "name": "Articles Wrapper"
    }
  ]
}
{% endschema %}