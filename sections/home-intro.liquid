{{ 'home-intro.css' | asset_url | stylesheet_tag }}
{% render 'section-base-style' %}

<section class="hero-intro">
  <div class="hero-intro__text">
    <h2 class="hero-intro__heading">
      {{ section.settings.heading_text }}
    </h2>
  </div>

  <div class="hero-intro__image-wrap">
    <picture>
      {% if section.settings.mobile_image %}
        <source
          media="(max-width: 1024px)"
          srcset="{{ section.settings.mobile_image | image_url: width: 1080 }}"
        >
      {% endif %}
      <img
        src="{{ section.settings.desktop_image | image_url: width: 1800 }}"
        alt="{{ section.settings.image_alt | escape }}"
      >
    </picture>
  </div>
</section>

<script src="{{ 'home-intro.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Hero Intro",
  "limit": 1,
  "settings": [
    {
      "type": "richtext",
      "id": "heading_text",
      "label": "Heading Text",
      "default": "<p>OUAI /wā/ (noun) — pronounced way</p>"
    },
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Desktop Image"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile Image"
    },
    {
      "type": "text",
      "id": "image_alt",
      "label": "Image alt text",
      "default": "Hero image"
    }
  ],
  "presets": [
    {
      "name": "Hero Intro"
    }
  ]
}
{% endschema %}
