{{ 'home-intro.css' | asset_url | stylesheet_tag }}

<section class="hero-reveal">

  <!-- BLACK TEXT (BACKGROUND) -->
  <div class="hero-reveal__text hero-reveal__text--black">
    <h2 class="hero-reveal__heading">
      {{ section.settings.heading_text }}
    </h2>
  </div>

  <!-- MASK (IMAGE + WHITE TEXT) -->
  <div class="hero-reveal__mask">

    <div class="hero-reveal__text hero-reveal__text--white">
      <h2 class="hero-reveal__heading">
        {{ section.settings.heading_text }}
      </h2>
    </div>

    <div class="hero-reveal__image">
      <img
        src="{{ section.settings.image | image_url: width: 2000 }}"
        alt=""
      >
    </div>

  </div>
</section>

<script src="{{ 'home-intro.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Hero Image Reveal",
  "settings": [
    {
      "type": "richtext",
      "id": "heading_text",
      "label": "Heading",
      "default": "<p>OUAI /wā/ (noun) — pronounced way</p>"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero Image"
    }
  ],
  "presets": [
    {
      "name": "Hero Image Reveal"
    }
  ]
}
{% endschema %}
