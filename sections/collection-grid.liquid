<div id="shopify-section-16082607149eb162e4" class="shopify-section" {{ section.shopify_attributes }}>
  <div class="image-overlay-grid cols-2 no-gutters">
    {% for block in section.blocks %}
      <div {{ block.shopify_attributes }}>
        <a href="{{ block.settings.link }}" aria-label="{{ block.settings.title }} Shop Now"
          class="image-with-text-overlay js-animate" style="background-color: {{ block.settings.bg_color }};">
          <div class='scaling-image-wrapper'>
            <div class="sliding-img-wrapper large-image" data-swipe-dir="up" data-shape="square" data-slide-order="1">
              <div class="img-slide-bg" style="background-color: #F3F3F4;"></div>
              <div class="cropped-image-wrapper">
                <img class="lazyload"
                  data-src="{{ block.settings.image | img_url: '1440x1482' }}"
                  data-sizes="auto" alt="{{ block.settings.title }}">
              </div>
            </div>
          </div>
          <div class="image-overlay-end-details split-aligner" style="color: {{ block.settings.text_color }};">
            <p>{{ block.settings.title }}</p>
            <p>{{ block.settings.cta_text }}</p>
          </div>
        </a>
      </div>
    {% endfor %}
  </div>
</div>

