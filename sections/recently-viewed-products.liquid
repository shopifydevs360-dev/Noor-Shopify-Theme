{% if product %}

<section
  id="recently-viewed-products-{{ section.id }}"
  class="product-related-carousel {{ section.settings.custom_class }} m-color-{{ section.settings.color_scheme }}"
  data-current-product="{{ product.handle }}"
>
  <div class="product-carousel section-{{ section.id }}-padding">

    {% if section.settings.title != blank %}
      <h2 class="container">
        <div class="info-title">
          {{ section.settings.title }}
        </div>
      </h2>
    {% endif %}

    <div class="swiper swiper-container-product">
      <div class="swiper-wrapper js-recently-viewed-wrapper">
        <!-- Products injected by JS -->
      </div>

      <div class="swiper-scrollbar hide-desktop hide-large-screens"></div>
    </div>

  </div>
</section>

<script>
document.addEventListener('DOMContentLoaded', () => {
  const section = document.querySelector('#recently-viewed-products-{{ section.id }}');
  if (!section) return;

  const currentHandle = section.dataset.currentProduct;
  const storageKey = 'recently_viewed_products';
  const limit = {{ section.settings.limit | default: 8 }};

  let items = JSON.parse(localStorage.getItem(storageKey)) || [];

  /* ---------------- SAVE CURRENT PRODUCT ---------------- */
  items = items.filter(handle => handle !== currentHandle);
  items.unshift(currentHandle);
  items = items.slice(0, limit);

  localStorage.setItem(storageKey, JSON.stringify(items));

  /* ---------------- RENDER RECENTLY VIEWED ---------------- */
  const wrapper = section.querySelector('.js-recently-viewed-wrapper');

  items.forEach(handle => {
    if (handle === currentHandle) return;

    fetch(`/products/${handle}?view=card`)
      .then(res => res.text())
      .then(html => {
        const slide = document.createElement('div');
        slide.className = 'swiper-slide product-slide';
        slide.innerHTML = html;
        wrapper.appendChild(slide);
      })
      .then(() => {
        if (wrapper.children.length === 1) initSwiper();
      });
  });

  function initSwiper() {
    new Swiper(section.querySelector('.swiper-container-product'), {
      slidesPerView: 1.2,
      spaceBetween: 24,
      observer: true,
      observeParents: true,
      scrollbar: {
        el: section.querySelector('.swiper-scrollbar'),
        draggable: true
      },
      breakpoints: {
        580: { slidesPerView: 2.5 },
        991: { slidesPerView: 3 },
        1321: { slidesPerView: 3.5 }
      }
    });
  }
});
</script>

{% endif %}
