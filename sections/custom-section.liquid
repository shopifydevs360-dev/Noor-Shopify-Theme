
<style>
  /* Scoped to this section only */
  .section-{{ section.id }}-id {
    position: relative;
    overflow: hidden;
    background-color: {{ section.settings.background_color }};
    border-top-left-radius: {{ section.settings.border_radius_top }}px;
    border-top-right-radius: {{ section.settings.border_radius_top }}px;
    border-bottom-left-radius: {{ section.settings.border_radius_bottom }}px;
    border-bottom-right-radius: {{ section.settings.border_radius_bottom }}px;
  }

  /* Height modes */
  .section-{{ section.id }}-id[data-height="auto"] {
    height: auto;
  }
  .section-{{ section.id }}-id[data-height="normal"] {
    min-height: 600px;
  }
  .section-{{ section.id }}-id[data-height="full"] {
    min-height: 100vh;
  }
  .section-{{ section.id }}-id[data-height="custom"] {
    height: {{ section.settings.height_desktop }}px;
  }

  @media (max-width: 1024px) {
    .section-{{ section.id }}-id[data-height="custom"] {
      height: {{ section.settings.height_tablet }}px;
    }
  }

  @media (max-width: 768px) {
    .section-{{ section.id }}-id[data-height="custom"] {
      height: {{ section.settings.height_mobile }}px;
    }
  }

  /* Background images */
  .section-{{ section.id }}-id .custom-section__background {
    position: absolute;
    inset: 0;
    z-index: -2;
  }

  .section-{{ section.id }}-id .custom-section__background img {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }
{% if section.settings.background_image_mobile %}
  /* mobile/bg swap */
  .section-{{ section.id }}-id .custom-section__background .mobile-bg { display: none; }
  @media (max-width: 768px) {
    .section-{{ section.id }}-id .custom-section__background .desktop-bg { display: none; }
    .section-{{ section.id }}-id .custom-section__background .mobile-bg  { display: block; }
  }  
{% endif %}


  /* Overlay */
  {% if section.settings.overlay_enable %}
    .section-{{ section.id }}-id .custom-section__overlay {
      position: absolute;
      inset: 0;
      background-color: {{ section.settings.overlay_color }};
      opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
      z-index: -1;
      pointer-events: none;
    }
  {% endif %}
</style>



<div class="custom-section section-{{ section.id }}-id {{ section.settings.container_width }}" data-height="{{ section.settings.height_type }}">
  {% comment %} Background images (desktop + optional mobile) {% endcomment %}
  {% if section.settings.background_image or section.settings.background_image_mobile %}
<div class="custom-section__background">
  {% if section.settings.background_image %}
    {{ section.settings.background_image | image_tag: widths: '2000,1600,1200,800', sizes: '100vw', class: 'desktop-bg', loading: 'lazy' }}
  {% endif %}
  {% if section.settings.background_image_mobile %}
    {{ section.settings.background_image_mobile | image_tag: widths: '1000,800,600', sizes: '100vw', class: 'mobile-bg', loading: 'lazy' }}
  {% endif %}
</div>

  {% endif %}

  {% if section.settings.overlay_enable %}
    <div class="custom-section__overlay" aria-hidden="true"></div>
  {% endif %}

  <div class="custom-section__content">
    {% content_for 'blocks' %}
  </div>
</div>

{% schema %}
{
  "name": "Custom section",
  "blocks": [{ "type": "@theme" }],
  "settings": [
    {
      "type": "select",
      "id": "container_width",
      "label": "Container width",
      "options": [
        { "value": "container", "label": "Container" },
        { "value": "container-fluid", "label": "Container fluid" },
        { "value": "container-narrow", "label": "Container narrow" },
        { "value": "container-extra-narrow", "label": "Container extra narrow" },
        { "value": "full-width", "label": "Full width" }
      ],
      "default": "container"
    },
    {
      "type": "select",
      "id": "height_type",
      "label": "Section height",
      "options": [
        { "value": "auto", "label": "Adapt to content" },
        { "value": "normal", "label": "Normal (600px)" },
        { "value": "full", "label": "Full screen" },
        { "value": "custom", "label": "Custom height" }
      ],
      "default": "auto"
    },
    {
      "type": "range",
      "id": "height_desktop",
      "label": "Custom height (desktop)",
      "min": 200,
      "max": 2000,
      "step": 20,
      "unit": "px",
      "default": 800
    },
    {
      "type": "range",
      "id": "height_tablet",
      "label": "Custom height (tablet)",
      "min": 200,
      "max": 1500,
      "step": 20,
      "unit": "px",
      "default": 600
    },
    {
      "type": "range",
      "id": "height_mobile",
      "label": "Custom height (mobile)",
      "min": 200,
      "max": 1200,
      "step": 20,
      "unit": "px",
      "default": 500
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image (desktop)"
    },
    {
      "type": "image_picker",
      "id": "background_image_mobile",
      "label": "Background image (mobile)"
    },
    {
      "type": "checkbox",
      "id": "overlay_enable",
      "label": "Enable overlay",
      "default": false
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Overlay color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 40
    },
    {
      "type": "range",
      "id": "border_radius_top",
      "label": "Top border radius",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "border_radius_bottom",
      "label": "Bottom border radius",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "default": 0
    }
  ],
  "presets": [
    { "name": "Custom Section" }
  ]
}
{% endschema %}
