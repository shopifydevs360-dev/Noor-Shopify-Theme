{{ 'hero-slider.css' | asset_url | stylesheet_tag: preload: true }}
{{ 'swiper-bundle.min.css' | asset_url | stylesheet_tag: preload: true }}
<script src="{{ 'swiper-bundle.min.js' | asset_url }}" defer="defer"></script>

{%- liquid
  assign container_class = section.settings.container_width
  if section.settings.container_width == 'full-width'
    assign container_class = 'full-width'
  endif

  assign adapt_aspect_ratio_desktop = ''
  assign adapt_aspect_ratio_mobile = ''
  
  if section.settings.slider_height == 'adapt' and section.blocks.first.settings.image != blank
    assign adapt_aspect_ratio_desktop = section.blocks.first.settings.image.aspect_ratio
  endif
  
  if section.settings.slider_height_mobile == 'adapt'
    if section.blocks.first.settings.mobile_image != blank
      assign adapt_aspect_ratio_mobile = section.blocks.first.settings.mobile_image.aspect_ratio
    elsif section.blocks.first.settings.image != blank
      assign adapt_aspect_ratio_mobile = section.blocks.first.settings.image.aspect_ratio
    endif
  endif
-%}

<style>
  .hero-slider[data-section-id="{{ section.id }}"] {
    {% if adapt_aspect_ratio_desktop != '' %}
      aspect-ratio: {{ adapt_aspect_ratio_desktop }};
    {% endif %}
  }
  
  @media (max-width: 767px) {
    .hero-slider[data-section-id="{{ section.id }}"] {
      {% if adapt_aspect_ratio_mobile != '' %}
        aspect-ratio: {{ adapt_aspect_ratio_mobile }};
      {% endif %}
    }
  }
</style>

<div class="{{ container_class }}">
  <div class="hero-slider hero-slider--height-desktop-{{ section.settings.slider_height }} hero-slider--height-mobile-{{ section.settings.slider_height_mobile }} hero-slider--pagination-{{ section.settings.pagination_position }} hero-slider--navigation-{{ section.settings.navigation_position }} swiper" 
       data-section-id="{{ section.id }}">
    
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide m-color-{{ block.settings.color_scheme }}" {{ block.shopify_attributes }}>
          {%- if block.settings.image != blank -%}
            <div class="hero-slide__image-container">
              {%- if block.settings.mobile_image != blank -%}
                <picture>
                  <source media="(max-width: 767px)" srcset="{{ block.settings.mobile_image | image_url: width: 800, height: 800 }}">
                  <img
                    srcset="{{ block.settings.image | image_url: width: 1800, height: 800 }} 1x, {{ block.settings.image | image_url: width: 1800, height: 800, scale: 2 }} 2x"
                    src="{{ block.settings.image | image_url: width: 1800, height: 800 }}"
                    alt="{{ block.settings.image.alt | escape }}"
                    loading="lazy"
                    width="{{ block.settings.image.width }}"
                    height="{{ block.settings.image.height }}"
                  >
                </picture>
              {%- else -%}
                <img
                  srcset="{{ block.settings.image | image_url: width: 1800, height: 800 }} 1x, {{ block.settings.image | image_url: width: 1800, height: 800, scale: 2 }} 2x"
                  src="{{ block.settings.image | image_url: width: 1800, height: 800 }}"
                  alt="{{ block.settings.image.alt | escape }}"
                  loading="lazy"
                  width="{{ block.settings.image.width }}"
                  height="{{ block.settings.image.height }}"
                >
              {%- endif -%}
            </div>
          {%- else -%}
            <div class="hero-slide__placeholder">
              {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
          {%- endif -%}

          <div class="hero-slide__overlay" style="--overlay-opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};"></div>
          
          <div class="hero-slide__content-container">
            <div class="hero-slide__content text-{{ block.settings.text_alignment }}">
              {%- if block.settings.heading != blank -%}
                <h2 class="hero-slide__heading">{{ block.settings.heading | escape }}</h2>
              {%- endif -%}
              {%- if block.settings.text != blank -%}
                <div class="hero-slide__text rte">{{ block.settings.text }}</div>
              {%- endif -%}
              {%- if block.settings.button_label_1 != blank or block.settings.button_label_2 != blank -%}
                <div class="hero-slide__buttons">
                  {%- if block.settings.button_label_1 != blank -%}
                    <a href="{{ block.settings.button_link_1 }}" class="btn btn--primary" {% if block.settings.button_link_1 contains '://' %}target="_blank"{% endif %}>
                      {{ block.settings.button_label_1 | escape }}
                    </a>
                  {%- endif -%}
                  {%- if block.settings.button_label_2 != blank -%}
                    <a href="{{ block.settings.button_link_2 }}" class="btn btn--secondary" {% if block.settings.button_link_2 contains '://' %}target="_blank"{% endif %}>
                      {{ block.settings.button_label_2 | escape }}
                    </a>
                  {%- endif -%}
                </div>
              {%- endif -%}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>

    {%- if section.blocks.size > 1 -%}
      {%- if section.settings.show_navigation -%}
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
      {%- endif -%}

      {%- if section.settings.show_pagination -%}
        <div class="swiper-pagination"></div>
      {%- endif -%}
    {%- endif -%}
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const swiperContainer = document.querySelector('[data-section-id="{{ section.id }}"]');
    if (!swiperContainer) return;

    // Build swiper options
    const swiperOptions = {
      loop: {% if section.settings.loop_sliders %}true{% else %}false{% endif %},
      effect: 'slide',
      speed: 500,
    };

    // Add autoplay if enabled
    {% if section.settings.auto_rotate_sliders %}
      swiperOptions.autoplay = {
        delay: {{ section.settings.change_sliders_every | times: 1000 }},
        disableOnInteraction: false,
        pauseOnMouseEnter: true,
      };
    {% endif %}

    // Add navigation if enabled
    {% if section.settings.show_navigation %}
      swiperOptions.navigation = {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      };
    {% endif %}

    // Add pagination if enabled
    {% if section.settings.show_pagination %}
      swiperOptions.pagination = {
        el: '.swiper-pagination',
        clickable: true,
      };
    {% endif %}

    const swiper = new Swiper(swiperContainer, swiperOptions);
  });
</script>

{% schema %}
{
  "name": "Hero Slider",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "select",
      "id": "container_width",
      "label": "Container type",
      "options": [
        { "value": "container", "label": "Container" },
        { "value": "container-fluid", "label": "Container fluid" },
        { "value": "container-narrow", "label": "Container narrow" },
        { "value": "container-extra-narrow", "label": "Container extra narrow" },
        { "value": "full-width", "label": "Full width" }
      ],
      "default": "full-width"
    },
    {
      "type": "header",
      "content": "Slider Height"
    },
    {
      "type": "select",
      "id": "slider_height",
      "label": "Desktop height",
      "options": [
        { "value": "adapt", "label": "Adapt to first slide image" },
        { "value": "small", "label": "Small" },
        { "value": "medium", "label": "Medium" },
        { "value": "large", "label": "Large" },
        { "value": "full-screen", "label": "Full screen" }
      ],
      "default": "large"
    },
    {
      "type": "select",
      "id": "slider_height_mobile",
      "label": "Mobile height",
      "options": [
        { "value": "adapt", "label": "Adapt to first slide image" },
        { "value": "small", "label": "Small" },
        { "value": "medium", "label": "Medium" },
        { "value": "large", "label": "Large" },
        { "value": "full-screen", "label": "Full screen" }
      ],
      "default": "medium"
    },
    {
      "type": "header",
      "content": "Slider Controls"
    },
    {
      "type": "checkbox",
      "id": "loop_sliders",
      "label": "Loop slides",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "auto_rotate_sliders",
      "label": "Auto rotate slides",
      "default": true
    },
    {
      "type": "range",
      "id": "change_sliders_every",
      "min": 3,
      "max": 10,
      "step": 1,
      "unit": "s",
      "label": "Change slides every",
      "default": 5
    },
    {
      "type": "checkbox",
      "id": "show_pagination",
      "label": "Show pagination (dots)",
      "default": true
    },
    {
      "type": "select",
      "id": "pagination_position",
      "label": "Pagination position",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "bottom", "label": "Bottom" },
        { "value": "right", "label": "Right" }
      ],
      "default": "bottom"
    },
    {
      "type": "checkbox",
      "id": "show_navigation",
      "label": "Show navigation (arrows)",
      "default": true
    },
    {
      "type": "select",
      "id": "navigation_position",
      "label": "Navigation position",
      "options": [
        { "value": "middle-between", "label": "Middle (between)" },
        { "value": "top-between", "label": "Top (between)" },
        { "value": "bottom-between", "label": "Bottom (between)" },
        { "value": "top-left", "label": "Top Left" },
        { "value": "top-right", "label": "Top Right" },
        { "value": "middle-left", "label": "Middle Left" },
        { "value": "middle-right", "label": "Middle Right" },
        { "value": "bottom-left", "label": "Bottom Left" },
        { "value": "bottom-center", "label": "Bottom Center" },
        { "value": "bottom-right", "label": "Bottom Right" }
      ],
      "default": "middle-between"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "color_scheme",
          "id": "color_scheme",
          "label": "Color scheme",
          "default": "background-1"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Desktop Image"
        },
        {
          "type": "image_picker",
          "id": "mobile_image",
          "label": "Mobile Image (optional)"
        },
        {
          "type": "range",
          "id": "overlay_opacity",
          "min": 0,
          "max": 80,
          "step": 5,
          "unit": "%",
          "label": "Image overlay opacity",
          "default": 30
        },
        {
          "type": "text",
          "id": "heading",
          "default": "Natural Goodness",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Discover our premium collection of organic honey, rich ghee, and aromatic coffee.</p>",
          "label": "Text"
        },
        {
          "type": "select",
          "id": "text_alignment",
          "options": [
            { "value": "left", "label": "Left" },
            { "value": "center", "label": "Center" },
            { "value": "right", "label": "Right" }
          ],
          "default": "center",
          "label": "Text alignment"
        },
        {
          "type": "text",
          "id": "button_label_1",
          "default": "Shop Honey",
          "label": "First button label"
        },
        {
          "type": "url",
          "id": "button_link_1",
          "label": "First button link"
        },
        {
          "type": "text",
          "id": "button_label_2",
          "default": "Learn More",
          "label": "Second button label"
        },
        {
          "type": "url",
          "id": "button_link_2",
          "label": "Second button link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Slider",
      "blocks": [
        { "type": "slide" },
        { "type": "slide" }
      ]
    }
  ]
}
{% endschema %}