{{ 'hero-slider.css' | asset_url | stylesheet_tag: preload: true }}

<script src="{{ 'hero-slider.js' | asset_url }}" defer="defer"></script>

<div class="hero-slider m-color-{{ section.settings.color_scheme }}{% if section.settings.show_navigation %} hero-slider--has-nav{% endif %}" data-section-id="{{ section.id }}" data-autoplay="{{ section.settings.autoplay }}" data-speed="{{ section.settings.autoplay_speed | times: 1000 }}">
  
  <div class="hero-slider__inner">
    {% for block in section.blocks %}
      <div class="hero-slide" data-index="{{ forloop.index0 }}" {{ block.shopify_attributes }}>
        {% if block.settings.image != blank %}
          <div class="hero-slide__image-container">
            {%- if block.settings.mobile_image != blank -%}
              <picture>
                <source media="(max-width: 767px)" srcset="{{ block.settings.mobile_image | image_url: width: 800, height: 800 }}">
                <img
                  srcset="{{ block.settings.image | image_url: width: 1800, height: 800 }} 1x, {{ block.settings.image | image_url: width: 1800, height: 800, scale: 2 }} 2x"
                  src="{{ block.settings.image | image_url: width: 1800, height: 800 }}"
                  alt="{{ block.settings.image.alt | escape }}"
                  loading="lazy"
                  width="{{ block.settings.image.width }}"
                  height="{{ block.settings.image.height }}"
                >
              </picture>
            {%- else -%}
              <img
                srcset="{{ block.settings.image | image_url: width: 1800, height: 800 }} 1x, {{ block.settings.image | image_url: width: 1800, height: 800, scale: 2 }} 2x"
                src="{{ block.settings.image | image_url: width: 1800, height: 800 }}"
                alt="{{ block.settings.image.alt | escape }}"
                loading="lazy"
                width="{{ block.settings.image.width }}"
                height="{{ block.settings.image.height }}"
              >
            {%- endif -%}
          </div>
        {% else %}
          <div class="hero-slide__placeholder">
            {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {% endif %}

        <div class="hero-slide__overlay" style="background-color: rgba(var(--color-foreground), {{ block.settings.overlay_opacity | divided_by: 100.0 }});"></div>
        
        <div class="hero-slide__content-container">
          <div class="hero-slide__content text-{{ block.settings.text_alignment }}">
            {% if block.settings.heading != blank %}
              <h2 class="hero-slide__heading">{{ block.settings.heading | escape }}</h2>
            {% endif %}
            {% if block.settings.text != blank %}
              <div class="hero-slide__text rte">{{ block.settings.text }}</div>
            {% endif %}
            {% if block.settings.button_label_1 != blank or block.settings.button_label_2 != blank %}
              <div class="hero-slide__buttons">
                {% if block.settings.button_label_1 != blank %}
                  <a href="{{ block.settings.button_link_1 }}" class="btn btn--primary" {% if block.settings.button_link_1 contains '://' %}target="_blank"{% endif %}>
                    {{ block.settings.button_label_1 | escape }}
                  </a>
                {% endif %}
                {% if block.settings.button_label_2 != blank %}
                  <a href="{{ block.settings.button_link_2 }}" class="btn btn--secondary" {% if block.settings.button_link_2 contains '://' %}target="_blank"{% endif %}>
                    {{ block.settings.button_label_2 | escape }}
                  </a>
                {% endif %}
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    {% endfor %}
  </div>

  {% if section.blocks.size > 1 and section.settings.show_navigation %}
    <button type="button" class="hero-slider__arrow hero-slider__arrow--prev" aria-label="Previous slide">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </button>
    <button type="button" class="hero-slider__arrow hero-slider__arrow--next" aria-label="Next slide">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </button>
    
    <div class="hero-slider__dots" role="tablist">
      {% for block in section.blocks %}
        <button type="button" class="hero-slider__dot" role="tab" aria-label="Show slide {{ forloop.index }}" aria-controls="Slide-{{ section.id }}-{{ forloop.index0 }}" data-index="{{ forloop.index0 }}">
          <span class="visually-hidden">Show slide {{ forloop.index }}</span>
        </button>
      {% endfor %}
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Hero Slider",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "background-1"
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Enable autoplay",
      "default": true
    },
    {
      "type": "range",
      "id": "autoplay_speed",
      "min": 3,
      "max": 10,
      "step": 1,
      "unit": "s",
      "label": "Autoplay speed",
      "default": 5
    },
    {
      "type": "checkbox",
      "id": "show_navigation",
      "label": "Show navigation (arrows and dots)",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Desktop Image"
        },
        {
          "type": "image_picker",
          "id": "mobile_image",
          "label": "Mobile Image (optional)"
        },
        {
          "type": "range",
          "id": "overlay_opacity",
          "min": 0,
          "max": 80,
          "step": 5,
          "unit": "%",
          "label": "Image overlay opacity",
          "default": 30
        },
        {
          "type": "text",
          "id": "heading",
          "default": "Natural Goodness",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Discover our premium collection of organic honey, rich ghee, and aromatic coffee.</p>",
          "label": "Text"
        },
        {
          "type": "select",
          "id": "text_alignment",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "center",
          "label": "Text alignment"
        },
        {
          "type": "text",
          "id": "button_label_1",
          "default": "Shop Honey",
          "label": "First button label"
        },
        {
          "type": "url",
          "id": "button_link_1",
          "label": "First button link"
        },
        {
          "type": "text",
          "id": "button_label_2",
          "default": "Learn More",
          "label": "Second button label"
        },
        {
          "type": "url",
          "id": "button_link_2",
          "label": "Second button link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Slider",
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}