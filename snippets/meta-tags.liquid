{%- liquid
  assign og_title = page_title | default: shop.name
  assign og_url = canonical_url | default: shop.url
  assign og_type = 'website'
  assign og_description = page_description | default: shop.description | default: shop.name
  assign og_image = page_image | default: settings.default_social_image

  if request.page_type == 'product'
    assign og_type = 'product'
    assign og_image = product.featured_image | default: og_image
  elsif request.page_type == 'article'
    assign og_type = 'article'
    assign og_image = article.image | default: og_image
  elsif request.page_type == 'collection'
    assign og_type = 'product.group'
    assign og_image = collection.image | default: og_image
  elsif request.page_type == 'password'
    assign og_url = shop.url
  endif
-%}

<!-- Open Graph / Facebook -->
<meta property="og:site_name" content="{{ shop.name }}">
<meta property="og:url" content="{{ og_url }}">
<meta property="og:title" content="{{ og_title | escape }}">
<meta property="og:type" content="{{ og_type }}">
<meta property="og:description" content="{{ og_description | escape }}">

{%- if og_image -%}
  <meta property="og:image" content="{{ og_image | image_url: width: 1200 }}">
  <meta property="og:image:secure_url" content="{{ og_image | image_url: width: 1200 | prepend: 'https:' }}">
  <meta property="og:image:width" content="1200">
  <meta property="og:image:height" content="630">
{%- endif -%}

{%- if request.page_type == 'product' -%}
  <meta property="product:price:amount" content="{{ product.selected_or_first_available_variant.price | money_without_currency | strip_html }}">
  <meta property="product:price:currency" content="{{ cart.currency.iso_code }}">
{%- endif -%}

<!-- Twitter -->
{%- if settings.social_twitter_link != blank -%}
  <meta name="twitter:site" content="@{{ settings.social_twitter_link | split: 'twitter.com/' | last }}">
{%- endif -%}
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="{{ og_title | escape }}">
<meta name="twitter:description" content="{{ og_description | escape }}">
{%- if og_image -%}
  <meta name="twitter:image" content="{{ og_image | image_url: width: 1200 }}">
{%- endif -%}
