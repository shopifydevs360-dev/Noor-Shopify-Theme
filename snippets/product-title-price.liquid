<div class="product-block product-title-price" {{ block.shopify_attributes }}>
  <h1 class="product-title">
    {{ product.title }}
  </h1>

  <div class="product-price js-variant-price-update">

    {% if product.compare_at_price > product.price %}
      <!-- SALE PRICE -->
      <span
        class="price price--sale"
        data-price-type="sale">
        {{ product.price | money }}
      </span>
      <span
        class="price price--compare"
        data-price-type="compare">
        {{ product.compare_at_price | money }}
      </span>

    {% else %}
      <!-- REGULAR PRICE -->
      <span
        class="price price--regular"
        data-price-type="regular">
        {{ product.price | money }}
      </span>
    {% endif %}

  </div>
</div>
