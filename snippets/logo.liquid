{% comment %}
  Logo Snippet: Single image with responsive width settings
{% endcomment %}

{% assign logo_alt = settings.site_name | default: shop.name %}

{% if settings.logo != blank %}
  <a href="{{ routes.root_url }}" class="m-header__logo">
    {{ settings.logo 
      | image_url: width: 300 
      | image_tag: 
          class: 'm-logo__image', 
          widths: '100,150,200,250,300,400,500', 
          sizes: '(max-width: 480px) 100px, (max-width: 768px) 150px, 300px', 
          alt: logo_alt,
          loading: 'lazy'
    }}
  </a>
{% else %}
  <a href="{{ routes.root_url }}" class="m-header__logo">
    <strong>{{ settings.site_name | default: shop.name }}</strong>
  </a>
{% endif %}

<style>
  .m-logo__image {
    width: 100%;
    max-width: {{ settings.logo_width_desktop }}px;
    height: auto;
    display: block;
  }

  @media (max-width: 768px) {
    .m-logo__image {
      max-width: {{ settings.logo_width_tablet }}px;
    }
  }

  @media (max-width: 480px) {
    .m-logo__image {
      max-width: {{ settings.logo_width_mobile }}px;
    }
  }
</style>
