{% comment %}
  Logo Snippet: Single image with responsive width settings
{% endcomment %}

{% if settings.logo != blank %}
  <a href="{{ routes.root_url }}" class="m-header__logo">
    {{ settings.logo 
      | image_url: width: 300 
      | image_tag: 
          class: 'm-logo__image', 
          widths: '100,150,200,250,300,400,500', 
          sizes: '(max-width: 480px) 100px, (max-width: 768px) 150px, 300px', 
          alt: shop.name 
    }}
  </a>
{% else %}
  <a href="{{ routes.root_url }}" class="m-header__logo">
    {% if settings.site_name %}
      <strong>{{ settings.site_name }}</strong>
    {% endif %}
    {% unless settings.site_name %}
      <strong>{{ shop.name }}</strong>
    {% endunless %}
    
  </a>
{% endif %}




<style>
  .logo-img {
    width: {{ settings.logo_width_desktop }}px;
    height: auto;
  }

  @media (max-width: 768px) {
    .logo-img {
      width: {{ settings.logo_width_tablet }}px;
    }
  }

  @media (max-width: 480px) {
    .logo-img {
      width: {{ settings.logo_width_mobile }}px;
    }
  }
</style>
