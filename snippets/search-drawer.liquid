{{ 'search-drawer.css' | asset_url | stylesheet_tag: preload: true }}

<!-- Search Drawer Overlay -->
<div class="drawer__overlay" id="search-drawer-overlay"></div>

<!-- Search Drawer -->
<div class="search-drawer m-color-{{ settings.search_color_scheme }}" id="search-drawer" role="dialog" aria-modal="true" aria-label="Search">
  <div class="search-drawer__inner">
    <div class="search-drawer__header">
      <div class="search-drawer__input-wrapper">
        <label class="visually-hidden" for="search-input">Search</label>
        <input 
          type="search" 
          id="search-input" 
          class="search-drawer__input" 
          placeholder="search" 
          autocomplete="off"
          aria-label="search"
        >
        <button class="search-drawer__submit" aria-label="Submit search">
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M9 17C13.4183 17 17 13.4183 17 9C17 4.58172 13.4183 1 9 1C4.58172 1 1 4.58172 1 9C1 13.4183 4.58172 17 9 17Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M19 19L14.65 14.65" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
      </div>
      
      <button class="search-drawer__close" aria-label="Close search">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M18 6L6 18M6 6L18 18" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
    </div>
    
    <div class="search-drawer__content" id="search-drawer-content">
    <!-- Dropdown container -->
        <div id="search-predictive" class="search-predictive hidden">

            <div class="predictive-columns">

            <!-- Column 1: Suggestions -->
            <div class="predictive-suggestions">
                <h4>Suggestions</h4>
                <ul id="predictive-suggestions-list"></ul>
            </div>

            <!-- Column 2: Products -->
            <div class="predictive-products">
                <h4>Products</h4>
                <div id="predictive-products-list"></div>
            </div>

            </div>

            <!-- Bottom text -->
            <div class="predictive-bottom">
            Results for "<span id="predictive-query-text"></span>"
            </div>

        </div>
    </div>
  </div>
</div>

<script src="{{ 'search-drawer.js' | asset_url }}" defer="defer"></script>